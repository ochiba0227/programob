extends layout

block content
  div(ng-app="spicyApp1" ng-controller="SpicyCtrl" class="container")
    h2 #{title}
    div(class="row")
      div(class="col-lg-12")
        form(id="spicyForm" ng-submit="addCompetiton()")
          div(class="form-group")
            label(for="competitionTitle") 試合タイトル
            input(type="text" class="form-control" id="competitionTitle" ng-model="competitionTitle")
          div(class="form-group")
            label(for="competitonDescription") 試合説明
            input(type="text" class="form-control" id="competitionDescription" ng-model="competitionDescription")
          div(class="form-group")
            label(for="competitonDate") 開催日
            input(type="text" class="form-control" id="competitonDate" ng-model="competitionDate" datepicker-popup is-open="datePickerOpen")
            div(class="input-group-addon" ng-click="toggleDatePicker($event)")
              i(class="glyphicon glyphicon-calendar")
          button(type="submit" class="btn btn-primary") 試合を追加する
    
    div(class="row")
      div(class="col-lg-12")
        input(type="text" class="form-control" id="exampleInputName3" ng-model="spi")
        div(class="table-responsive")
          table(st-table="rowCollection" class="table table-striped table-bordered table-hover")
            thead
              tr
                th 試合名
                th 開催日
            tbody
              tr(ng-repeat="row in rowCollection| filter:spi" ng-click="showProgram(row)")
                td {{row.title}}
                td {{row.day}}
