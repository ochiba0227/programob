extends layout

block content
  div(ng-app="entryApp" ng-controller="entryController" class="container")
    h2 #{title}
    div(class="row")
      div(class="col-lg-12")
        form(id="entryForm" ng-submit="addEntry()")
          div(class="form-group")
            label(for="entryTitle") プログラム名
            input(type="text" class="form-control" id="entryTitle" ng-model="entryTitle" required)
          div(class="form-group")
            label(for="entryDescription") プログラム説明
            input(type="text" class="form-control" id="entryDescription" ng-model="entryDescription" required)
          div(class="form-group")
            label(for="entryDistance") 距離
            input(type="number" class="form-control" id="entryDistance" ng-model="entryDistance" required)
          div(class="form-group")
            label(for="entryRelay") リレー
            input(type="checkbox" class="form-control" id="entryRelay" ng-model="entryRelay")
          button(type="submit" class="btn btn-primary") プログラムを追加する
    
    div(class="row")
      div(class="col-lg-12")
        input(type="text" class="form-control" id="filterInput" ng-model="filterInput")
        div(class="table-responsive")
          table(st-table="rowCollection" class="table table-striped table-bordered table-hover")
            thead
              tr
                th プログラム名
                th プログラム説明
                th 距離
                th リレー
            tbody
              tr(ng-repeat="row in rowCollection| filter:filterInput" ng-click="showEntry(row)")
                td {{row.title}}
                td {{row.description}}
                td {{row.distance}}
                td {{row.isRelay}}
block scripts
  script.
    var entryId = "#{id}";
  script(src='/controllers/admin/entryController.js')
