extends layout

block content
  div(class="container")
    h2 試合リスト
    div(ng-app="spicyApp1" ng-controller="SpicyCtrl")
      form(class="form-inline")
        div(class="form-group")
          label(for="exampleInputName2") The food is {{spice}} spicy!
          input(type="text" class="form-control" id="exampleInputName2" ng-model="spice")
        div(class="form-group")
          label The food is {{spi}} spicy!
          input(type="text" class="form-control" id="exampleInputName3" ng-model="spi")
        button(type="submit" class="btn btn-primary") Send invitations
      
      div(class="table-responsive")
        table(st-table="rowCollection" class="table table-striped table-bordered table-hover")
          thead
            tr
              th First name
              th last name
              th birth date
              th balance
              th email
          tbody
            tr(ng-repeat="row in rowCollection" ng-click="methodA(row)")
              td {{row.firstName}}
              td {{row.lastName}}
              td {{row.birthDate}}
              td {{row.balance}}
              td {{row.email}}
block scripts
  script(src='/controllers/indexController.js')
  script(src='/javascripts/index.js')
