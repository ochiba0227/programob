extends layout

block content
  h1 Todo
  // ToDo入力フォームを作成する
  .form
    form#form
      p
        label(for='text') 内容
        input#text(type='text',name='text')
      p
        label(for='limit') 期限
        input#limit(type='date',name='limit')
      p
        input(type='submit',value='登録する')
  // ToDo一覧を表示する
  .list
  
  div(ng-app="spicyApp1" ng-controller="SpicyCtrl")
    input(ng-model="spice")
    The food is {{spice}} spicy!
    table(st-table="rowCollection" class="table table-striped")
      thead
        tr
          th First name
          th last name
          th birth date
          th balance
          th email
      tbody
        tr(ng-repeat="row in rowCollection")
          td {{row.firstName}}
          td {{row.lastName}}
          td {{row.birthDate}}
          td {{row.balance}}
          td {{row.email}}
block scripts
  script(src='/javascripts/index.js')
